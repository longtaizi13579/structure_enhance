    "domain": "technology",
    "name": "重新下载图书和有声书",
    "graph": {
        "1": {
            "data": "重新下载图书和有声书",
            "type": "root",
            "pid": "0"
        },
        "2": {
            "data": "要查看您之前在AppleBooks中购买的图书和有声书，请按照以下步骤在您的设备上重新下载。",
            "type": "ordinary",
            "pid": "1"
        },
        "3": {
            "data": "如何在iPhone、iPad或iPodtouch上重新下载图书或有声书",
            "type": "sequence",
            "pid": "1"
        },
        "4": {
            "data": "打开BooksApp，然后轻点屏幕底部的“阅读中”。",
            "type": "sequence-step",
            "pid": "3"
        },
        "5": {
            "data": "轻点屏幕右上角的“登录”按钮或您的照片。",
            "type": "sequence-step",
            "pid": "3"
        },
        "6": {
            "data": "在“我的购买项目”下方，轻点“图书”或“有声书”。如果您使用“家人共享”，则可以轻点家庭成员的名字来查看他们的购买项目。",
            "type": "sequence-step",
            "pid": "3"
        },
        "7": {
            "data": "轻点“不在此[设备]上”，然后轻点“所有图书”或“所有有声书”。",
            "type": "sequence-step",
            "pid": "3"
        },
        "8": {
            "data": "找到您想要下载的图书或有声书，然后轻点“下载”按钮。",
            "type": "sequence-step",
            "pid": "3"
        },
        "12": {
            "data": "如何在Mac上重新下载图书或有声书",
            "type": "sequence",
            "pid": "1"
        },
        "13": {
            "data": "打开“AppleBooks”。",
            "type": "sequence-step",
            "pid": "12"
        },
        "14": {
            "data": "点按屏幕左下角的“登录”或您的名字。",
            "type": "sequence-step",
            "pid": "12"
        },
        "15": {
            "data": "在“我的购买项目”下，点按“图书”或“有声书”。",
            "type": "sequence-step",
            "pid": "12"
        },
        "16": {
            "data": "点按“不在此Mac上”，以查看不在您电脑上的已购买内容。",
            "type": "sequence-step",
            "pid": "12"
        },
        "17": {
            "data": "点按“所有图书”或“所有有声书”以筛选结果。",
            "type": "sequence-step",
            "pid": "12"
        },
        "18": {
            "data": "找到您想要下载的图书或有声书，然后点按“下载”按钮。",
            "type": "sequence-step",
            "pid": "12"
        },
        "22": {
            "data": "如何在Windows版iTunes上重新下载有声书",
            "type": "sequence",
            "pid": "1"
        },
        "23": {
            "data": "打开iTunes。",
            "type": "sequence-step",
            "pid": "22"
        },
        "24": {
            "data": "从iTunes窗口顶部的菜单栏中，选取“帐户”>“已购项目”。如果您使用“家人共享”，则您会看到“家庭购买项目”而不是“已购项目”。",
            "type": "sequence-step",
            "pid": "22"
        },
        "25": {
            "data": "从iTunes窗口的菜单中选取“有声书”。",
            "type": "sequence-step",
            "pid": "22"
        },
        "26": {
            "data": "找到您想要重新下载的有声书。如果您使用“家人共享”，则您可以在“已购项目”旁边选取家庭成员的姓名以查看他们的购买项目。",
            "type": "sequence-step",
            "pid": "22"
        },
        "27": {
            "data": "点按有声书的“下载”按钮。",
            "type": "sequence-step",
            "pid": "22"
        }
    }
}